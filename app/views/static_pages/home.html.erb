<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/project_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3><%= t "home.project_feed" %></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
<div class="center hero-unit">
  <h1 id="home-title"><%= t "welcome.title"%></h1>

  <h2><%= t "welcome.text" %></h2>
  <ul class="icons_home">
  	<li><%= image_tag ("bulb.png")%><h2><%= t "welcome.options.idea" %></h2></li>
  	<li><%= image_tag ("clock.png")%><h2><%= t "welcome.options.time" %></h2></li>
  	<li><%= image_tag ("money.png")%><h2><%= t "welcome.options.money" %></h2></li>
  	<li><%= image_tag ("contacts.png")%><h2><%= t "welcome.options.contacts" %></h2></li>
  </ul>
  <br>

  <div class="button"><%= link_to t("welcome.signup"), signup_path, class: "btn btn-large btn-primary" %></div>
</div>
<% end %>