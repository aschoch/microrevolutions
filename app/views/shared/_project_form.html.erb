<%= form_for(@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: t("project.form_title") %>
    <%= f.text_area :content, placeholder: t("project.form_content") %>
    <%= f.text_area :description, placeholder: t("project.form_description") %>
    <%= f.text_field :city, placeholder: t("project.form_city") %>
    <%= f.text_field :tags, placeholder: t("project.form_tags") %>
  </div>
  <%= f.submit t("buttons.start"), class: "btn btn-large btn-primary" %>
<% end %>