<% @user ||= current_user %>
<div class="stats">
  <a href="<%= joined_projects_user_path(@user) %>">
    <strong id="projects" class="stat">
      <%= @user.joined_projects.count %>
    </strong>
    projects
  </a>
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>