<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= link_to image_tag(@user.image.url, :class => 'user_image'), @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Projects:</b> <%= @user.joined_projects.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @projects.any? %>
      <ul class="projects">
        <%= render @projects %>
      </ul>
      <%= will_paginate @projects %>
    <% end %>
  </div>
</div>